<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.egco428.graduation.MainActivity"
    android:background="#9E9E9E">


    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageView2"
        android:src="@drawable/title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CATEGORY"
        android:id="@+id/textView3"
        android:textColor="#FFC726"
        android:textStyle="bold"
        android:textSize="40dp"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:gravity="center_vertical"
        android:id="@+id/gradLayout">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/gradIcon"
            android:src="@drawable/graduates"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/imageView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Graduate"
            android:id="@+id/gradTxt"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/gradIcon"
            android:textSize="30dp"
            android:layout_marginLeft="40dp"
            android:textColor="#01579B"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gradLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:gravity="center_vertical"
        android:id="@+id/guestLayout">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/guestIcon"
            android:src="@drawable/man" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guest"
            android:id="@+id/guestTxt"
            android:textSize="30dp"
            android:textColor="#01579B"
            android:layout_marginLeft="40dp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>
