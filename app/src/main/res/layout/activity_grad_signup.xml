<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.egco428.graduation.GradSignupActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Graduate"
        android:id="@+id/textView4"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:id="@+id/textView5"
        android:textSize="40dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="60dp"
        android:textColor="#FFC726"
        android:textStyle="bold" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/usernameInput"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

        <EditText
            android:id="@+id/usernameTxt"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:layout_centerHorizontal="true" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/passInput"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usernameInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/passTxt"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_centerHorizontal="true" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/confirmpassInput"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/confirmpassTxt"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:layout_centerHorizontal="true" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/firstnameInput"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confirmpassInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/firstnameTxt"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Firstname"
            android:layout_centerHorizontal="true" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/lastnameInput"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstnameInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/lastnameTxt"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Lastname"
            android:layout_centerHorizontal="true" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/TelInput"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lastnameInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/telTxt"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Mobile No."
            android:inputType="numberDecimal"
            android:layout_centerHorizontal="true" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submitBtn"
        android:layout_below="@+id/TelInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />


</RelativeLayout>
