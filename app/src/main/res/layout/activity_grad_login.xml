<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.egco428.graduation.GradLoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Graduate"
        android:id="@+id/textView4"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="50dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:id="@+id/textView5"
        android:textSize="40dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="60dp"
        android:textColor="#FFC726"
        android:textStyle="bold" />

    <TextView
    android:layout_width="300dp"
    android:layout_height="50dp"
    android:text="USERNAME"
    android:id="@+id/textView6"
    android:layout_below="@+id/textView5"
    android:background="@drawable/bordertxt"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="50dp"
    android:textSize="20dp"
    android:gravity="center_vertical|center_horizontal" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/userLoginTxt"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="PASSWORD"
        android:id="@+id/textView7"
        android:layout_below="@+id/userLoginTxt"
        android:background="@drawable/bordertxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:gravity="center_vertical|center_horizontal" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/passLoginTxt"
        android:layout_below="@+id/textView7"
        android:inputType="textPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signupLayout"
        android:layout_below="@+id/passLoginTxt"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don&apos;t have an Account?"
            android:id="@+id/textView8"
            android:textSize="15dp"
            android:layout_below="@+id/passLoginTxt"
            android:layout_alignStart="@+id/textView4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup"
            android:id="@+id/signupTxt"
            android:textSize="15dp"
            android:textColor="#0035AD"
            android:textStyle="bold|italic"
            android:layout_below="@+id/passLoginTxt"
            android:layout_toEndOf="@+id/textView8"
            android:layout_marginLeft="20dp" />
    </LinearLayout>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/loginBtn"
        android:layout_below="@+id/signupLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignStart="@+id/textView4" />

</RelativeLayout>
